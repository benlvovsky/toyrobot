#include <iostream>
#include "toyrobot.hpp"

using namespace std;

int main() {
	std::string line;
	cout << "!!!Hello World!!!" << endl; // prints !!!Hello World!!!
	ToyRobot tr;
	while (true) {
		cout << "Enter command (PLACE X,Y,F, MOVE, LEFT, RIGHT, REPORT): " << line << std::endl;
		cin >> line;
		tr.process(line);
	}
	return 0;
}



